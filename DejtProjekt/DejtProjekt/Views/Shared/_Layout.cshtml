<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Projekt Dejt", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(DejtProjekt.Recourses.Country.Hem, "Index", "Home")</li>
                    <li>@Html.ActionLink(DejtProjekt.Recourses.Country.Om, "LoggedIn", "LoggIn")</li>
                    <li>@Html.ActionLink(DejtProjekt.Recourses.Country.Vanner, "showFriendRequest", "Usermodels")</li>
                    <li>@Html.ActionLink(DejtProjekt.Recourses.Country.Sprak, "Index", "Language")</li>
                </ul>
                @using (Html.BeginForm("Index", "UserModels", FormMethod.Get))
                {
                    <p class="text-danger">
                        @ViewBag.Search
                    </p>
                    <input type="text" style="margin-top: 10px;" class="input-sm" name="searchString" />
                    <input type="submit" class="btn btn-default" value="Sök" />

                    @Html.Partial("_LoginPartial")

                    @*<a href='@Url.Action("Change", "Language")'>
                        <img src='@Url.Content("~/Content/Images/svenska.png")' style="width:25px;height:25px;" />
                    </a>*@

                    @*@Html.ActionLink("Svenska", "Change", "Language", new {@class="imageclass"}, null)*@
                        
                    @*<img src="~/Content/Images/svenska.png" style="width:25px;height:25px;"/> Svenska*@
                    

                    @*<li>@Html.ActionLink("Svenska", "Change", "Language", new { LanguageAbbrevation = "Sv" }, null)</li>
                    <li>@Html.ActionLink("Engelska", "Change", "Language", new { LanguageAbbrevation = "En" }, null)</li>


                        <a href="/Language/Change?LanguageAbbrevation=Sv">
                            <img src="~/Content/Images/svenska.png" alt="Svenska" style="width:25px;height:25px;" />
                        </a>

                        <a href="/Language/Change?LanguageAbbrevation=En">
                            <img src="~/Content/Images/engelska.png" alt="Engelska" style="width:25px;height:25px;" />
                        </a>*@
                        }
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DejtProjekt</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

